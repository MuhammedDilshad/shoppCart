<div class="container">
    <section class="pe-5 ps-5 text-center container-xxl position-relative bg-white d-flex p-0">
        <div class="content p-2 d-flex justify-content-center mt-5">

            <form class="form-horizontal " action="/admin/addCategory" method="post" id="addCategory">
                <!-- Form Name -->
                <legend class="fw-semibold">Add Category</legend>
                <!-- Text input-->
                <div class="form-group text-center">
                    <label class="fw-semibold" for="product_name">Category Name</label>
                    <div class="addInput table-bordered">
                        <input id="product_name" name="categoryName" placeholder="Category Name"
                            class="form-control input-md mt-2" required="" type="text">
                    </div>
                </div>
                {{#if errmess}}
                <p class="text-danger">{{errmess}}</p>
                {{/if}}
                <!-- Button -->
                <div class="form-group mt-3">
                    <div class="addInput">
                        <button id="singlebutton" type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>

<script>
    $("#addCategory").validate({
        rules: {
            categoryName: {
                required: true
            }
        },
        messages: {
            categoryName: {
                required: "CategoryName required"

            }
        }

    }) 
</script>

<style>
    @media (min-width: 989px) {

        .addInput {
            width: 500px;
        }
    }

    @media (max-width: 988.98px) {
        .addInput {
            width: 100%;
        }
    }
</style>