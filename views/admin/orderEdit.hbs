<section class="container-p-y container-xxl flex-grow-1">
    <div class="card">

        <h5 class="card-header">All Products</h5>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a type="button" class="btn btn-info" href="/admin/orderManegement"><i class="fas fa-plus"></i> back
            </a>
        </div>
        <div class="table-responsive text-nowrap p-4">
            <table id="productTable" class="table p-3" style="width:100%">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Pincode</th>
                        <th>Mobile</th>
                        <th>quantity</th>
                        <th>Amount</th>
                        <th>PaymentMethod</th>
                        <th>status</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{inc1 @index}}</td>
                        <td>{{this.fname}} </td>
                        <td>{{this.address}}</td>
                        <td>{{this.pincode}} </td>
                        <td>{{this.mobile}} </td>
                        <td>{{this.quantity}} </td>
                        <td>{{this.totalAmount}} </td>
                        <td>{{this.paymentMethod}} </td>
                        <td>{{this.status}} </td>
                        <td>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#exampleModal{{this._id}}">
                                Update
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        {{!-- <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div> --}}
                                        <div class="modal-body">
                                            <form action="/admin/orderEdit/{{this._id}}" method="post">
                                                <select class="form-control" name="status" id="">
                                                    <option value="{{this.status}}">{{this.status}}</option>
                                                    <option value="Pending">Pending</option>
                                                    <option value="Shipped">Shipped</option>
                                                    <option value="Delivered">Delivered</option>
                                                    <option value="Order Canceled">Confirm cancel</option>
                                                </select>
                                                <input type="text" name="orderId" value="{{this._id}}" hidden>
                                                {{!-- <input type="text" name="status" value="{{this.status}}" hidden>
                                                --}}
                                                <button type="submit" class="btn btn-success mt-4">Save Changes</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            {{!-- <button type="button" class="btn btn-primary">Save changes</button>
                                            --}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
<script>
    $(document).ready(function () {
        $('#productTable').wrap('<div id="productTable" style="display:none"/>');
        $('#productTable').css('display', 'block');
    });
    var table = $('#productTable').DataTable();
</script>